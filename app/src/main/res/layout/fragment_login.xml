<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <import type="android.view.View" />

        <variable
            name="userBean"
            type="com.cathy.datanbindingdemo.bean.UserBean" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{userBean.name}" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{String.valueOf(userBean.age)}"
            android:visibility="@{userBean.age==26?View.INVISIBLE:View.VISIBLE}" />

        <ImageView
            android:id="@+id/iv_glide"
            android:layout_width="wrap_content"
            android:minHeight="100dp"
            android:minWidth="100dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btn_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dot me to change data..." />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_data"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</layout>